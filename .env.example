# ===========================================
# Memento Mori - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# ===== Database =====
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=memento_mori
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/memento_mori?schema=public

# ===== Redis =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis

# ===== Keycloak =====
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=memento-mori
KEYCLOAK_CLIENT_ID=backend-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Frontend Keycloak Config
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=memento-mori
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=client-app

# ===== JWT (fallback if not using Keycloak) =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# ===== Application URLs =====
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===== Stripe =====
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ===== Email (Development - Mailhog) =====
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@mementomori.dev

# ===== MinIO (S3 Compatible Storage) =====
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=memento-mori

# ===== Node Environment =====
NODE_ENV=development
PORT=3001
