{
  // Отключение spell checker полностью
  "cSpell.enabled": false,
  
  // Альтернативно: отключение только для markdown файлов
  "cSpell.enableFiletypes": [],
  
  // Отключение встроенной проверки VS Code
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.wordBasedSuggestions": false,
  "editor.suggest.showWords": false
}
